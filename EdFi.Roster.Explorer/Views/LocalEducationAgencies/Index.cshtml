@model ExtendedInfoResponse<List<LocalEducationAgency>>

@{
    ViewData["Title"] = "Local Education Agencies";
}

<h1>Local Education Agencies</h1>
Operations

Load / Reload
<p> Get Local Education Agencies from the configured Ed - Fi API (This will overwrite the currently stored local education agencies)</p>

<div><button class="btn btn-primary btn" onclick="document.location.href='@Url.Action("LoadLeas")'">Get Local Education Agencies</button></div>

@if (Model.IsExtendedInfoAvailable)
{
    <div id="dvResultsRowLeas" class="row">
        <div class="col">
            <div>
                <span id="spTotalCallsLeas"></span>
                <div id="dvTotalRecordsRowLeas" class="row">
                    <div class="col">
                        Total API Calls: <span id="spTotalRecordsLeas">@(Model.Pages.Count)</span>
                    </div>
                </div>
                <div id="dvTotalRecordsRowLeas" class="row">
                    <div class="col">
                        Total Records Returned: <span id="spTotalRecordsLeas">@(Model.FullDataSet.Count)</span>
                    </div>
                </div>
            </div>
            <div>
                <table>
                    <tr class="parentrow">
                        <td style="text-align:justify">
                            <span class="sign btn btn-outline-primary" style="margin-right: 5px">Call Details </span>
                        </td>
                    </tr>
                    <tr class="childContent">
                        <td colspan="8">
                            <table class="footable-details table table-striped table-hover table-bordered table-responsive">
                                <tbody>
                                <tr><td><div style="max-height: 120px; overflow-y: scroll">
                                        <ul id="ulResultsLeas" class="list-group">
                                            @for (int i = 0; i < Model.Pages.Count; i++)
                                            {
                                                <li class="list-group-item">
                                                    <div>Page @(i+1)  - Records Returned-@(Model.Pages[i].Data.Count).</div>
                                                    <div>Url:@(Model.Pages[i].ResponseUri.OriginalString)</div>
                                                </li>
                                            }
                                        </ul></div>
                                </td></tr>
                                </tbody>
                            </table>
                        </td>
                    </tr>
                </table>
            </div>
            <div><table>
            <tr class="parentrow">
                <td style="text-align:justify">
                    <span class="sign btn btn-outline-primary" style="margin-right: 5px">Full Content </span>
                </td>
            </tr>
                <tr class="childContent">
                    <td colspan="8">
                        <table class="footable-details table table-striped table-hover table-bordered table-responsive">
                            <tbody>
                            <tr><td><div style="max-height: 120px; overflow-y: scroll">@Model.ResponseData</div></td></tr>
                            </tbody>
                        </table>
                    </td>
                </tr>
            </table></div>
        </div>
    </div>
}
<hr />
<form>
    Current Local Education Agencies Saved
    <table class="table">
        <thead>
        <tr>
            <th>
                Local Education Agency Id
            </th>
            <th>
                Name Of Institution
            </th>
            <th>
                Api Resource Id
            </th>
            <th>Json Payload</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model.FullDataSet)
        {
            <tr class="parentrow">
                <td>
                    @Html.DisplayFor(modelItem => item.LocalEducationAgencyId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NameOfInstitution)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td style="text-align:justify">
                    <span class="sign btn btn-outline-primary" style="margin-right: 5px"></span>
                </td>
            </tr>
            <tr class="childContent">
                <td colspan="8">
                    <table class="footable-details table table-striped table-hover table-bordered table-responsive">
                        <tbody>
                        <tr><td id="jsondata"><div style="max-height:120px; overflow-y: scroll">@item.ToJson()</div></td></tr>
                        </tbody>
                    </table>
                </td>
            </tr>
        }
        </tbody>
    </table>

</form>
